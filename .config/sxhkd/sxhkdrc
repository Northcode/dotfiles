super + {h,j,k,l}
      bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
      bspc node -s {west,south,north,east}

super + control + {h,j,k,l}
      bspc node -p {west,south,north,east}

super + g
      bspc node -p cancel

super + f
      rofi -show window

super + d
      bspc node -c

super + s ; {a,s,d,f}
      bspc node -t {tiled,floating,pseudo_tiled,fullscreen}

super + alt + s
      bspc desktop -l next

super + alt + {h,l}
      bspc desktop -f {prev,next}

super + shift + {1-9,0}
       bspc node -d ^{1-9,10}

super + {1-9,0}
      bspc desktop -f focused:^{1-9,10}

super + meta + f
      # Find desktop

super + meta + d
      # Remove desktop

super + space
      rofi -show run

super + meta + esc
      bspc quit

super + {_,shift} + c
      xsel {,-b} | xsel {-b,}

super + {y,u,i,o}
      mpc {play,next,prev,pause}

super + control + alt + {h,j,k,l}
      bspc monitor -f {west,south,north,east}

super + a ; e
      emacsclient -s /tmp/emacs1000/server -c 

super + a ; q
      telegram-desktop

super + a ; f
      firefox

super + a ; s
      pavucontrol

super + a ; c
      urxvt

super + Return
      urxvt

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

super + b
      bspc desktop focused -f last

super + alt + Return
      ~/bin/lockscreen

Print
	scrot

shift + Print
      	scrot -s

control + Print
	feh --bg-fill /data/Wallpapers/1920x1080/$(ls /data/Wallpapers/1920x1080/ | shuf | head -n 1) /data/Wallpapers/1920x1080/$(ls /data/Wallpapers/1920x1080/ | shuf | head -n 1)

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd