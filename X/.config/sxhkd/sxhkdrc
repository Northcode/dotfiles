super + {h,j,k,l}
      bspc node -f {west,south,north,east}

super + shift + {h,j,k,l}
      bspc node -s {west,south,north,east}

super + control + {h,j,k,l}
      bspc node -p {west,south,north,east}

super + g
      bspc node -p cancel

super + f
      rofi -show window

super + d
      bspc node -c

super + s ; {a,s,d,f}
      bspc node -t {tiled,floating,pseudo_tiled,fullscreen}

super + t ; {h,s,p,l}
      bspc node --flag {hidden, sticky, private, locked}

super + r ; b
      bspc node -B

super + alt + s
      bspc desktop -l next

super + alt + {h,l}
      bspc desktop -f {prev,next}

super + shift + {1-9,0}
       bspc node -d ^{1-9,10}

super + {1-9,0}
      bspc desktop -f focused:^{1-9,10}

super + meta + f
      # Find desktop

super + meta + d
      # Remove desktop

super + space
      rofi -combi-modi window,run,ssh -terminal st -show combi -modi combi

super + alt + Escape
      bspc quit

super + {_,shift} + c
      xsel {,-b} | xsel {-b,}

super + {y,u,i,o}
      mpc {play,next,prev,pause}

super + control + alt + {h,j,k,l}
      bspc monitor -f {west,south,north,east}

super + a ; e
      emacsclient -s /tmp/emacs1000/server -c 

super + a ; q
      telegram-desktop

super + a ; f
      firefox-nightly

super + a ; s
      st pulsemixer

super + a ; c
      emacsclient -s /tmp/emacs1000/server -c -e '(eshell)'

super + Return
      st

super + b
      bspc desktop focused -f last

super + alt + Return
      ~/bin/lockscreen

Print
	scrot '/home/andreas/scrots/%Y-%m-%d-%H%M%S.png'

alt + Print
	scrot -u '/home/andreas/scrots/%Y-%m-%d-%H%M%S.png'

shift + Print
      	scrot -s '/home/andreas/scrots/%Y-%m-%d-%H%M%S.png'

control + Print
	hsetroot -full "$(find /home/andreas/Wallpapers -type f | shuf | head -n 1)" 1> ~/hsetroot-errors.log 2> ~/hsetroot-2.log

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# ISO_Left_Tab
#       ~/savequit.sh

XF86MonBrightnessUp
	light -A 10

XF86MonBrightnessDown
	light -U 10
	
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -10%

XF86AudioMute
	pactl set-sink-mute 0 toggle

super + q
      	~/bin/notify_info

super + Pause
      	systemctl suspend
